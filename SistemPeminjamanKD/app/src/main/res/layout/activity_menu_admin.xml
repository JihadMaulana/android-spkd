<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.saspossible.sistempeminjamankd.menuAdmin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/kiri"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list"
                android:layout_width="147dp"
                android:layout_height="116dp"
                android:layout_alignLeft="@+id/detailgambar"
                android:layout_alignStart="@+id/detailgambar"
                android:layout_alignTop="@+id/detailgambar"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="91dp"
                android:src="@drawable/menupermintaankecil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Permintaan"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/user"
                android:layout_width="147dp"
                android:layout_height="116dp"
                android:layout_below="@+id/detailjudul"
                android:layout_marginEnd="21dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="91dp"
                android:src="@drawable/menuuserkecil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kiri"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageView
                android:id="@+id/kendaraan"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="91dp"
                android:src="@drawable/menukendaraankecil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kendaraan"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/supir"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_below="@+id/detailgambar"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="91dp"
                android:layout_toLeftOf="@+id/detailgambar"
                android:layout_toStartOf="@+id/detailgambar"
                android:src="@drawable/menusupirkecil" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supir"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
